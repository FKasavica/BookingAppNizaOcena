<Window x:Class="BookingAppNizaOcena.Views.GuestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest Menu" Height="400" Width="450">
    <StackPanel Margin="20">
        <TextBlock Text="Guest" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Button Content="Make a Reservation" Width="300" Height="40" Margin="10" Click="MakeReservationButton_Click"/>
        <Button Content="View Reservations" Width="300" Height="40" Margin="10" Click="ViewReservationsButton_Click"/>
        <Button Content="View Hotels" Width="300" Height="40" Margin="10" Click="ViewHotelsButton_Click"/>

        <Button Content="Logout" Width="300" Height="40" Margin="10" Click="LogoutButton_Click"/>
    </StackPanel>
</Window>
