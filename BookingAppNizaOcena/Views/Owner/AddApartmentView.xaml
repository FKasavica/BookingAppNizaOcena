<Window x:Class="BookingAppNizaOcena.Views.Owner.AddApartmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Apartment" Height="350" Width="400">
    <Grid>
        <Label Content="Apartment Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" />
        <TextBox Name="ApartmentNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,10,0,0" />

        <Label Content="Apartment Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" />
        <TextBox Name="ApartmentDescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,50,0,0" />

        <Label Content="Room Count:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" />
        <TextBox Name="ApartmentRoomCountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,90,0,0" />

        <Label Content="Max Guests:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" />
        <TextBox Name="ApartmentMaxGuestsTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,130,0,0" />

        <Button Content="Save Apartment" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="150,180,0,0" Click="SaveApartment_Click" />
    </Grid>
</Window>
