<Window x:Class="BookingAppNizaOcena.Views.Owner.OwnerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Owner View" Height="450" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Owner Menu" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="View Reservations" Width="200" Height="40" Margin="0,10" Click="ViewReservations_Click"/>
            <Button Content="Manage My Hotels" Width="200" Height="40" Margin="0,10" Click="ManageMyHotels_Click"/>
            <Button Content="View All Hotels" Width="200" Height="40" Margin="0,10" Click="ViewAllHotels_Click"/>
            <Button Content="Add Apartment" Width="200" Height="40" Margin="0,10" Click="AddApartment_Click"/>

            <Button Content="Logout" Width="200" Height="40" Margin="0,10" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
