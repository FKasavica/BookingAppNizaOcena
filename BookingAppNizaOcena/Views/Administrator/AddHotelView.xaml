<Window x:Class="BookingAppNizaOcena.Views.Administrator.AddHotelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Hotel" Height="500" Width="450">
    <StackPanel Margin="20">
        <TextBlock Text="Add New Hotel" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <TextBlock Text="Hotel Code" Margin="5"/>
        <TextBox Name="HotelCodeTextBox" Width="300" Margin="5"/>

        <TextBlock Text="Hotel Name" Margin="5"/>
        <TextBox Name="HotelNameTextBox" Width="300" Margin="5"/>

        <TextBlock Text="Year Built" Margin="5"/>
        <TextBox Name="YearBuiltTextBox" Width="300" Margin="5"/>

        <TextBlock Text="Star Rating" Margin="5"/>
        <TextBox Name="StarRatingTextBox" Width="300" Margin="5"/>

        <TextBlock Text="Owner JMBG" Margin="5"/>
        <TextBox Name="OwnerJMBGTextBox" Width="300" Margin="5"/>

        <Button Content="Save Hotel" Width="200" Margin="10" Click="SaveHotelButton_Click"/>
    </StackPanel>
</Window>
