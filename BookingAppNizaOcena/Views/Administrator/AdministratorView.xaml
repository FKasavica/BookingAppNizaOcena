<Window x:Class="BookingAppNizaOcena.Views.AdministratorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdministratorMenu" Height="500" Width="450">
    <StackPanel Margin="20">
        <TextBlock Text="Administrator" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Button Content="Add New Owner" Width="300" Height="40" Margin="10" Click="AddOwnerButton_Click"/>
        <Button Content="View All Users" Width="300" Height="40" Margin="10" Click="ViewUsersButton_Click"/>
        <Button Content="View Hotels" Width="300" Height="40" Margin="10" Click="ViewHotelsButton_Click"/>
        <Button Content="Add New Hotel" Width="300" Height="40" Margin="10" Click="AddHotelButton_Click"/>
        <Button Content="Logout" Width="300" Height="40" Margin="10" Click="LogoutButton_Click"/>
    </StackPanel>
</Window>
