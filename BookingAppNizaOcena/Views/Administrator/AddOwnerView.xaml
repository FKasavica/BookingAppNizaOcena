<Window x:Class="BookingAppNizaOcena.Views.Administrator.AddOwnerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Owner" Height="500" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Add New Owner" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <TextBlock Text="First Name" Margin="10"/>
        <TextBox Name="FirstNameTextBox" Width="300" Margin="10"/>

        <TextBlock Text="Last Name" Margin="10"/>
        <TextBox Name="LastNameTextBox" Width="300" Margin="10"/>

        <TextBlock Text="JMBG" Margin="10"/>
        <TextBox Name="JMBGTextBox" Width="300" Margin="10"/>

        <TextBlock Text="Email" Margin="10"/>
        <TextBox Name="EmailTextBox" Width="300" Margin="10"/>

        <Button Content="Add Owner" Width="150" Margin="10" Click="AddOwnerButton_Click"/>
    </StackPanel>
</Window>
