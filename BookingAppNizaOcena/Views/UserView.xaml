<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="UserView">

    <Canvas Background="White" Width="400" Height="250">
        <TextBlock Text="Login" FontSize="25" FontWeight="Bold" Canvas.Left="150" Canvas.Top="30"/>

        <TextBlock Text="Email:" FontSize="15" Canvas.Left="50" Canvas.Top="100"/>
        <TextBox Name="EmailTextBox" Width="200" Height="25" Canvas.Left="150" Canvas.Top="100"/>

        <TextBlock Text="Password:" FontSize="15" Canvas.Left="50" Canvas.Top="150"/>
        <PasswordBox Name="PasswordBox" Width="200" Height="25" Canvas.Left="150" Canvas.Top="150"/>

        <Button Content="Login" Width="100" Height="30" Canvas.Left="80" Canvas.Top="200"/>
        <Button Content="Register" Width="100" Height="30" Canvas.Left="220" Canvas.Top="200"/>
    </Canvas>
</Page>